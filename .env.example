# Shufti Agent Configuration

# Basic Settings
DEBUG=False
LOG_LEVEL=INFO
DRY_RUN=True
TEST_MODE=False

# File Paths
DATA_DIR=data
LOG_DIR=logs
MEMORY_FILE=agent_memory.json
COOKIE_FILE=cookies.json
RESPONSE_TEMPLATE_DIR=templates

# Shufti Credentials (REQUIRED for actual use)
SHUFTI_EMAIL=your_email@example.com
SHUFTI_PASSWORD=your_password

# Shufti URLs (usually don't need to change)
SHUFTI_BASE_URL=https://app.shufti.jp

# Rate Limiting (be respectful to the website)
REQUEST_DELAY=2.0
MAX_RETRIES=3
RETRY_DELAY=5.0

# Job Processing
MAX_JOBS_PER_RUN=10
JOB_SCAN_INTERVAL=300

# AI Configuration (Free models)
AI_MODEL=huggingface
AI_MODEL_NAME=microsoft/DialoGPT-medium
HF_MODEL_NAME=microsoft/DialoGPT-medium
HF_API_TOKEN=

# Alternative AI models (if using paid services)
AI_API_KEY=
AI_BASE_URL=

# Browser Settings
BROWSER_HEADLESS=True
BROWSER_TIMEOUT=30
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36

# Session Management
SESSION_TIMEOUT=3600

# Application Behavior
AUTO_APPLY=False

# Job Filtering
MIN_HOURLY_RATE=1000
MAX_HOURLY_RATE=10000
PREFERRED_LOCATIONS=Tokyo,Shibuya,Shinjuku
EXCLUDED_KEYWORDS=adult,gambling,casino

# Communication
DEFAULT_LANGUAGE=ja

# Notifications (optional)
ENABLE_NOTIFICATIONS=False
NOTIFICATION_EMAIL=
SLACK_WEBHOOK_URL=

# Database (optional)
DATABASE_URL=

# Security (optional)
ENCRYPT_DATA=False
ENCRYPTION_KEY=

# Proxy Settings (if needed)
HTTP_PROXY=
HTTPS_PROXY=

# Development/Testing
MOCK_RESPONSES=False