# Shufti.jp Authentication
SHUFTI_EMAIL=your_email@example.com
SHUFTI_PASSWORD=your_password

# AI Service Configuration (using free models)
# OpenAI Compatible API (e.g., Ollama, LM Studio)
AI_API_BASE_URL=http://localhost:11434/v1  # Ollama default
AI_API_KEY=not_required_for_ollama
AI_MODEL_NAME=llama2:7b  # or mistral:7b, codellama:7b

# Alternative: Use Hugging Face Transformers locally
USE_LOCAL_AI=true
LOCAL_MODEL_NAME=microsoft/DialoGPT-medium

# Rate Limiting Configuration
REQUEST_DELAY_MIN=2  # Minimum seconds between requests
REQUEST_DELAY_MAX=5  # Maximum seconds between requests
CONCURRENT_REQUESTS=1  # Number of concurrent requests

# Application Configuration
MAX_JOBS_PER_RUN=5
APPLY_TO_JOBS=false  # Set to true when ready to actually apply
DEBUG_MODE=true

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/shufti_agent.log

# User Agent and Browser
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36
BROWSER_HEADLESS=true
BROWSER_TIMEOUT=30

# Storage
DATA_DIR=./data
JOBS_DATA_FILE=jobs_data.json
MEMORY_FILE=agent_memory.json